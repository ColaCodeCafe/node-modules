{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist/",
        "sourceMap": false,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "types": ["node", "jest"],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "./src/*.ts",
        "./types/*.d.ts",
        "./tests/*.test.ts"
    ],
    "exclude": [
        "./coverage",
        "./dist",
        "./node_modules"
    ]
}